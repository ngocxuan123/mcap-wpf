<Window x:Class="Mcap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mcap"
        mc:Ignorable="d"
        Height="1000"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu x:Name="mainMenu" IsMainMenu="True" Height="32" Background="#1B66B2" Foreground="White" VerticalAlignment="Center">
            <MenuItem Header="THỰC HIỆN CA CHỤP" Cursor="Hand" Background="White" Height="32" Padding="10,0" Foreground="Black" VerticalAlignment="Center">
                <MenuItem.Icon>
                    <Image Source="/Resources/icons/black/b-workstation.png" Margin="0,-7,0,0"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="TIẾP NHẬN" Cursor="Hand" Background="Transparent" Height="32" Padding="10,0" Foreground="White" VerticalAlignment="Center">
                <MenuItem.Icon>
                    <Image Source="/Resources/icons/white/w-patient-add.png" Margin="0,-7,0,0"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="WORKLIST" Background="Transparent" Height="32" Padding="10,0" Foreground="White" VerticalAlignment="Center">
                <MenuItem.Icon>
                    <Image Source="/Resources/icons/white/w-list.png" Margin="0,-7,0,0"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="BỆNH NHÂN" Background="Transparent" Height="32" Padding="10,0" Foreground="White" VerticalAlignment="Center">
                <MenuItem.Icon>
                    <Image Source="/Resources/icons/white/w-patient.png" Margin="0,-7,0,0"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="THỐNG KÊ" Background="Transparent" Height="32" Padding="10,0" Foreground="White" VerticalAlignment="Center">
                <MenuItem.Icon>
                    <Image Source="/Resources/icons/white/w-chart.png" Margin="0,-7,0,0"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="DANH MỤC" Background="Transparent" Height="32" Padding="10,0" Foreground="White" VerticalAlignment="Center">
                <MenuItem.Icon>
                    <Image Source="/Resources/icons/white/w-category.png" Margin="0,-7,0,0"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="CÀI ĐẶT" Background="Transparent" Height="32" Padding="10,0" Foreground="White" VerticalAlignment="Center">
                <MenuItem.Icon>
                    <Image Source="/Resources/icons/white/w-setting.png" Margin="0,-7,0,0"></Image>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"></ColumnDefinition>
                    <ColumnDefinition Width="80*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="0" Background="Transparent" BorderBrush="Gainsboro" BorderThickness="1" Margin="5" Padding="5">
                    <StackPanel >
                        <TextBlock Text="DANH SÁCH CHỜ"></TextBlock>
                    </StackPanel>
                </Border>
                <Border Grid.Row="0" Grid.Column="1" Background="Transparent" BorderBrush="Gainsboro" BorderThickness="1" Margin="5" Padding="5">
                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60*" />
                                <ColumnDefinition Width="40*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="BỆNH NHÂN ĐANG THỰC HIỆN"></TextBlock>
                            <StackPanel Grid.Column="0" Grid.Row="1">
                                <GroupBox Header="Thông tin hành chính">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15.33*" />
                                            <ColumnDefinition Width="44.33*" />
                                            <ColumnDefinition Width="20.33*" />
                                            <ColumnDefinition Width="30.33*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0" Content="NGUYỄN VĂN A" FontWeight="Bold" Margin="0,5"></Label>
                                        <Label Grid.Row="1" Grid.Column="0" Content="MÃ BN #:" Margin="0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="1" Margin="0,3" Text="BN00001523"></TextBox>
                                        <Label Grid.Row="1" Grid.Column="2" Content="Tuổi:" Margin="15,5,0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="3" Grid.Row="1" Margin="0,3" Text="31"></TextBox>
                                        
                                        <Label Grid.Row="2" Grid.Column="0" Content="MÃ BHYT #:" Margin="0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="2" Margin="0,3" Text="DN7792385238233"></TextBox>
                                        <Label Grid.Row="2" Grid.Column="2" Content="Giới tính:" Margin="15,5,0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="3" Grid.Row="2" Margin="0,3" Text="Nam"></TextBox>

                                        <Label Grid.Row="3" Grid.Column="0" Content="Địa chỉ:" Margin="0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,3" Text="235 Nguyễn Tri Phương - Hải Châu - Đà Nẵng"></TextBox>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Thông tin dịch vụ">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15.33*" />
                                            <ColumnDefinition Width="44.33*" />
                                            <ColumnDefinition Width="20.33*" />
                                            <ColumnDefinition Width="30.33*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" Content="MÃ Phiếu #:" Margin="0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="0" Margin="0,3" Text="180827000008"></TextBox>
                                        <Label Grid.Row="0" Grid.Column="2" Content="Thời điểm nhận:" Margin="15,5,0,5"></Label>
                                        <DatePicker Padding="2" Grid.Column="3" Grid.Row="0" Margin="0,3" Text="28-08-2018 11:20"></DatePicker>
                                        
                                        <Label Grid.Row="1" Grid.Column="0" Content="Tên Dịch Vụ:" Margin="0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="1" Margin="0,3" Text="Nội soi dạ dày"></TextBox>
                                        <Label Grid.Row="1" Grid.Column="2" Content="Ngày chỉ định:" Margin="15,5,0,5"></Label>
                                        <DatePicker Padding="2" Grid.Column="3" Grid.Row="1" Margin="0,3" Text="31"></DatePicker>

                                        <Label Grid.Row="2" Grid.Column="0" Content="MÃ BHYT #:" Margin="0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="2" Margin="0,3" Text="DN7792385238233"></TextBox>
                                        <Label Grid.Row="2" Grid.Column="2" Content="Giới tính:" Margin="15,5,0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="3" Grid.Row="2" Margin="0,3" Text="Nam"></TextBox>

                                        <Label Grid.Row="3" Grid.Column="0" Content="Địa chỉ:" Margin="0,5"></Label>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,3" Text="235 Nguyễn Tri Phương - Hải Châu - Đà Nẵng"></TextBox>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Kết quả khám bệnh">
                                    <StackPanel>
                                        <Label Content="Kết quả"  Margin="5,5" FontWeight="Bold"></Label>
                                        <ScrollViewer Height="170" HorizontalScrollBarVisibility="Hidden">
                                            <RichTextBox x:Name="richTextBox" HorizontalAlignment="Stretch" Height="160">
                                                <FlowDocument>
                                                    <Paragraph>
                                                        <Run Text="RichTextBox"/>
                                                    </Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>
                                        </ScrollViewer>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                            <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Background="Transparent" BorderBrush="Gainsboro" BorderThickness="1" Margin="5" Padding="5">
                                <StackPanel>
                                    <MediaElement MinHeight="300"/>
                                    <StackPanel>
                                        <TextBlock Text="DANH SÁCH HÌNH ẢNH ĐÃ CHỤP" Padding="5"></TextBlock>
                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Height="90">
                                            <WrapPanel>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                            </WrapPanel>
                                        </ScrollViewer>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="DANH SÁCH VIDEO ĐÃ GHI" Padding="5"></TextBlock>
                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Height="90">
                                            <WrapPanel>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"></Rectangle>
                                            </WrapPanel>
                                        </ScrollViewer>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
