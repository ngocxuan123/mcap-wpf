                                <GroupBox Header="Thông tin dịch vụ">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15.33*" />
                                            <ColumnDefinition Width="44.33*" />
                                            <ColumnDefinition Width="20.33*" />
                                            <ColumnDefinition Width="30.33*" />
