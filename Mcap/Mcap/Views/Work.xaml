<UserControl x:Class="Mcap.Views.Work"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mcap.Views"
             xmlns:components="clr-namespace:Mcap.Components"
             mc:Ignorable="d"
             VerticalAlignment="Stretch" 
             HorizontalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas Panel.ZIndex="10" Visibility="{Binding Loading}" VerticalAlignment="Center" HorizontalAlignment="Center">
            <components:Loader></components:Loader>
        </Canvas>
        <StackPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="0" Background="Transparent" BorderBrush="Gainsboro" BorderThickness="1" Margin="5" Padding="5">
                    <StackPanel >
                        <TextBlock Text="DANH SÁCH CHỜ"/>
                        <DataGrid Height="Auto" MaxHeight="600" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" x:Name="patientAwait" ItemsSource="{Binding Customers}" BorderThickness="1" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="0" Grid.Column="1" Background="Transparent" BorderBrush="Gainsboro" BorderThickness="1" Margin="5" Padding="5">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60*" />
                                <ColumnDefinition Width="40*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ToolBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                <Button Padding="5, 0" Content="In"/>
                                <Separator/>
                                <Button Padding="5, 0" Content="Thoát ca chụp"/>
                                <Separator/>
                                <Button Padding="5, 0" Content="Kết thúc" Click="Button_Click"/>
                            </ToolBar>
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="BỆNH NHÂN ĐANG THỰC HIỆN" Margin="0,5"/>
                            <StackPanel Grid.Column="0" Grid.Row="2">
                                <GroupBox Header="Thông tin hành chính">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15.33*" />
                                            <ColumnDefinition Width="44.33*" />
                                            <ColumnDefinition Width="20.33*" />
                                            <ColumnDefinition Width="30.33*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0" Content="NGUYỄN VĂN A" FontWeight="Bold" Margin="0,5"/>
                                        <Label Grid.Row="1" Grid.Column="0" Content="MÃ BN #:" Margin="0,5"/>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="1" Margin="0,3" Text="BN00001523"/>
                                        <Label Grid.Row="1" Grid.Column="2" Content="Tuổi:" Margin="15,5,0,5"/>
                                        <TextBox Padding="2" Grid.Column="3" Grid.Row="1" Margin="0,3" Text="31"/>

                                        <Label Grid.Row="2" Grid.Column="0" Content="MÃ BHYT #:" Margin="0,5"/>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="2" Margin="0,3" Text="DN7792385238233"/>
                                        <Label Grid.Row="2" Grid.Column="2" Content="Giới tính:" Margin="15,5,0,5"/>
                                        <TextBox Padding="2" Grid.Column="3" Grid.Row="2" Margin="0,3" Text="Nam"/>

                                        <Label Grid.Row="3" Grid.Column="0" Content="Địa chỉ:" Margin="0,5"/>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,3" Text="235 Nguyễn Tri Phương - Hải Châu - Đà Nẵng"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Thông tin dịch vụ">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15.33*" />
                                            <ColumnDefinition Width="44.33*" />
                                            <ColumnDefinition Width="20.33*" />
                                            <ColumnDefinition Width="30.33*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" Content="MÃ Phiếu #:" Margin="0,5"/>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="0" Margin="0,3" Text="180827000008"/>
                                        <Label Grid.Row="0" Grid.Column="2" Content="Thời điểm nhận:" Margin="15,5,0,5"/>
                                        <DatePicker Padding="2" Grid.Column="3" Grid.Row="0" Margin="0,3" Text="28-08-2018 11:20"/>

                                        <Label Grid.Row="1" Grid.Column="0" Content="Tên Dịch Vụ:" Margin="0,5"/>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="1" Margin="0,3" Text="Nội soi dạ dày"/>
                                        <Label Grid.Row="1" Grid.Column="2" Content="Ngày chỉ định:" Margin="15,5,0,5"/>
                                        <DatePicker Padding="2" Grid.Column="3" Grid.Row="1" Margin="0,3" Text="31"/>

                                        <Label Grid.Row="2" Grid.Column="0" Content="MÃ BHYT #:" Margin="0,5"/>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="2" Margin="0,3" Text="DN7792385238233"/>
                                        <Label Grid.Row="2" Grid.Column="2" Content="Giới tính:" Margin="15,5,0,5"/>
                                        <TextBox Padding="2" Grid.Column="3" Grid.Row="2" Margin="0,3" Text="Nam"/>

                                        <Label Grid.Row="3" Grid.Column="0" Content="Địa chỉ:" Margin="0,5"/>
                                        <TextBox Padding="2" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,3" Text="235 Nguyễn Tri Phương - Hải Châu - Đà Nẵng"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Kết quả khám bệnh" Panel.ZIndex="8">
                                    <components:HtmlTextBox />
                                </GroupBox>
                            </StackPanel>
                            <Border Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Background="Transparent" BorderBrush="Gainsboro" BorderThickness="1" Margin="5" Padding="5">
                                <StackPanel Height="555" VerticalAlignment="Top">
                                    <MediaElement MinHeight="300"/>
                                    <StackPanel>
                                        <TextBlock Text="DANH SÁCH HÌNH ẢNH ĐÃ CHỤP" Padding="5"/>
                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Height="90">
                                            <WrapPanel>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                            </WrapPanel>
                                        </ScrollViewer>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="DANH SÁCH VIDEO ĐÃ GHI" Padding="5"/>
                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Height="90">
                                            <WrapPanel>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                                <Rectangle Height="80" Width="80" Fill="Beige" Margin="5"/>
                                            </WrapPanel>
                                        </ScrollViewer>
                                    </StackPanel>
                                    <ToolBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Button Padding="5, 0" Content="Chụp hình"/>
                                        <Separator/>
                                        <Button Padding="5, 0" Content="Quay phim"/>
                                        <Separator/>
                                        <Button Padding="5, 0" Content="Mở file"/>
                                        <Separator/>
                                        <Button Padding="5, 0" Content="Ghi đĩa"/>
                                    </ToolBar>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
